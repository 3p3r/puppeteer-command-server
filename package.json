{
  "name": "puppeteer-command-server",
  "version": "1.0.0",
  "description": "Exposes basic browser automation through HTTP and MCP",
  "scripts": {
    "compile": "pkg --public dist/server.js -c package.json -C Brotli",
    "bundle": "esbuild src/server.ts --bundle --platform=node --outfile=dist/server.js --format=cjs",
    "build": "npm-run-all bundle compile",
    "dev": "nodemon --exec ts-node src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "pkg": {
    "assets": [
      "dist/server.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3p3r/puppeteer-command-server.git"
  },
  "keywords": [
    "puppeteer",
    "automation",
    "mcp",
    "browser"
  ],
  "author": "Sepehr Laal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3p3r/puppeteer-command-server/issues"
  },
  "homepage": "https://github.com/3p3r/puppeteer-command-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/uuid": "^10.0.0",
    "express": "^4.18.2",
    "express-mcp-handler": "^0.3.0",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^3.0.5",
    "puppeteer-core": "^24.26.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "esbuild": "^0.25.11",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vitest": "^4.0.4"
  }
}
