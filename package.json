{
  "name": "puppeteer-command-server",
  "version": "1.0.0",
  "description": "Exposes basic browser automation through HTTP and MCP",
  "scripts": {
    "compile": "NODE_OPTIONS='--import tsx' zx scripts/compile.zx.ts",
    "bundle": "NODE_OPTIONS='--import tsx' zx scripts/bundle.zx.ts",
    "build": "npm-run-all bundle compile",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "pkg": {
    "assets": [
      "dist/server.js",
      "src/routes/*.ts",
      "node_modules/swagger-ui-dist/**/*",
      "node_modules/puppeteer-extra/**/*",
      "node_modules/puppeteer-extra-*/**/*",
      "node_modules/jose/dist/browser/**/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3p3r/puppeteer-command-server.git"
  },
  "keywords": ["puppeteer", "automation", "mcp", "browser"],
  "author": "Sepehr Laal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3p3r/puppeteer-command-server/issues"
  },
  "homepage": "https://github.com/3p3r/puppeteer-command-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "debug": "^4.4.3",
    "express": "^4.18.2",
    "express-mcp-handler": "^0.3.0",
    "helmet": "^8.1.0",
    "http-proxy": "^1.18.1",
    "jose": "^5.10.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "puppeteer-core": "^24.26.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/cors": "^2.8.19",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.24",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "esbuild": "^0.25.11",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-anonymize-ua": "^2.4.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer-extra-plugin-user-preferences": "^2.4.1",
    "supertest": "^6.3.3",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vitest": "^4.0.4",
    "zx": "^8.8.5"
  }
}
